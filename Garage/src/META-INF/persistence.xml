<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="myPersistence" transaction-type="RESOURCE_LOCAL">
    <class>com.brookes.garage.entity.Brand</class>
    <class>com.brookes.garage.entity.Customer</class>
    <class>com.brookes.garage.entity.Customers_car</class>
    <class>com.brookes.garage.entity.Estimate</class>
    <class>com.brookes.garage.entity.Invoice</class>
    <class>com.brookes.garage.entity.Model</class>
    <class>com.brookes.garage.entity.Part</class>
    <class>com.brookes.garage.entity.Repair</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
      <property name="javax.persistence.jdbc.url"
        value="jdbc:derby:C:\Users\d-mon\db\SimpleDB;create=true" />
      <property name="javax.persistence.jdbc.user" value="test" />
      <property name="javax.persistence.jdbc.password" value="test" />

      <!-- EclipseLink should create the database schema automatically -->
      <property name="eclipselink.ddl-generation" value="create-tables" />
      <property name="eclipselink.ddl-generation.output-mode"
        value="database" />
    </properties>

  </persistence-unit>
</persistence> 